generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}


model Form {
  id           Int           @id @default(autoincrement())
  formId       String        @default(uuid())
  userId       String
  name         String
  description  String        @default("")
  blocks      String        @default("[]")
  views        Int           @default(0)
  responses    Int           @default(0)
  published    Boolean       @default(false)
  createdAt    DateTime      @default(now())
  creatorName  String

  settingsId   Int
  settings     FormSettings  @relation(fields: [settingsId], references: [id])

  formResponses FormResponses[]
}

model FormSettings {
  id           Int           @id @default(autoincrement())
  primaryColor String       // The main color (e.g., #2d31fa)
  backgroundColor String     
  fontFamily   String        @default("DM Sans") // Default font family
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @default(now()) @updatedAt

  forms        Form[]        // List of forms using this settings object
}

